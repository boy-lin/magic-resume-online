{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/(public)/[locale]/[...path]/page.tsx",
    "src/app/(public)/[locale]/page.tsx",
    "src/app/(public)/[locale]/[...path]/route.ts.bak",
    "src/app/(public)/[locale]/route",
    "src/app/(public)/[locale]/docs/layout.tsx.bak",
    "src/app/app/resumes-preview/layout.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}